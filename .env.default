# Document Converter Configuration
# This file is automatically created by the installation script

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=dev-secret-key-change-in-production
MAX_CONTENT_LENGTH=104857600

# Storage Configuration
# Options: LOCAL (default) or CLOUD (requires MinIO setup)
STORAGE_MODE=LOCAL

# MinIO Configuration (only needed if STORAGE_MODE=CLOUD)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_SECURE=false
MINIO_DATA_DIR=./minio/data

# MinIO Storage Buckets
MINIO_BUCKET_UPLOADS=uploads
MINIO_BUCKET_OUTPUTS=outputs
MINIO_BUCKET_SPLITS=splits
MINIO_BUCKET_DOCUMENTS=documents

# Application Settings
DEFAULT_CHUNK_SIZE=1000
DEFAULT_CHUNK_OVERLAP=200
MIN_CHUNK_SIZE=100
